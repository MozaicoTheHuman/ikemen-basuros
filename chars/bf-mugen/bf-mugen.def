; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "bf-mugen"    ;Name of character
displayname = "Boyfriend" ;Name of character to display
versiondate =  69   ;Version of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "MaavoTheHuman"         ;Character author name
localcoord = 1280,720       ;Local coordinate space width and height
pal.defaults = 1,3,2,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1


; Files for the player
[Files]
cmd     = kfm720.cmd        ;Command set
cns     = kfm720.cns        ;Constants
st      = kfm720.cns        ;States
st2      = BF_GFX.cns        ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = kfm720.sff        ;Sprite
anim    = kfm720.air        ;Animation
sound   = kfm.snd           ;Sound

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 3
z = 2
a = 4
b = 5
c = 6
;x2 = 7 ;Hold Start and press button X for palette 7, etc.
;y2 = 8
;z2 = 9
;a2 = 10
;b2 = 11
;c2 = 12

; Arcade mode
[Arcade]
intro.storyboard =
ending.storyboard =
